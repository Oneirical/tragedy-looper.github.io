                "alien": "friend",
                "richStudent": "friend",
                "forensicSpecialist": "conspiracyTheorist",
                "soldier": "person",
                "policeOfficer": "person",
                "officeWorker": "person",
                "teacher": "person"
            },
            "incidents": [
                {
                    "day": 2,
                    "incident": "suicide",
                    "culprit": "teacher"
                },
                {
                    "day": 5,
                    "incident": "foulEvil",
