            ],
            "daysPerLoop": 5,
            "cast": {
                "popIdol": "brain",
                "girlStudent": "conspiracyTheorist",
                "journalist": "person",
                "patient": "person",
                "shrineMaiden": "person",
                "boyStudent": "person",
                "richStudent": "person"
            },
            "incidents": [
                {
                    "day": 3,
                    "incident": "hospitalIncident",
                    "culprit": "boyStudent"
                },
                {
                    "day": 4,
                    "incident": "murder",
                    "culprit": "richStudent"
                },
                {
                    "day": 5,
                    "incident": "missingPerson",
                    "culprit": "shrineMaiden"
