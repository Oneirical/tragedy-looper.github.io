{
    "$schema": "https://tragedy-looper.github.io/incidents.schema.json",
    // For dev purposes
    // "$schema": "../incidents.schema.json",
    "incidents": [
        {
            "id": "crimePassion",
            "name": "Crime of Passion",
            "effect": [
                {
                    "description": "One other character at the culprit’s location dies, if possible. When determining if this Incident triggers, treat the culprit’s :paranoia: Limit as 1 lower."
                }
            ]
        },
        {
            "id": "dimensionalDistortion",
            "name": "Dimensional Distortion",
            "effect": [
                {
                    "description": "You may trigger a Warp. When determining if this Incident triggers, it always triggers regardless of the number of counters on the culprit."
                }
            ]
        },
        {
            "id": "dimensionalPerversion",
            "name": "Dimensional Perversion",
            "effect": [
                {
                    "description": "You may trigger a Warp. Place 2 :paranoia: counters on any character, and 2 :goodwill: counters on any other character."
                }
            ]
        },
        {
            "id": "dimensionalFracture",
            "name": "Dimensional Fracture",
            "effect": [
                {
                    "type": "Mandatory Loss condition: Protagonists Death",
                    "prerequisite": "If there are 3 or more kinds of counters on the culprit"
                }
            ]
        },
        {
            "id": "leftBehind",
            "name": "Left Behind",
            "effect": [
                {
                    "description": "Place 1 :intrigue: counter on a character at the culprit’s location, then move the culprit to any location."
                }
            ]
        },
        {
            "id": "phantasmalIncident",
            "name": "Phantasmal Incident",
            "effect": [
                {
                    "description": "Resolve the effect of Crime of Passion, Dimensional Perversion, or Left Behind. When determining if this Incident triggers, refer to the number of :intrigue: counters on the culprit instead of the original type of counter."
                }
            ]
        },
        {
            "id": "lastWill",
            "name": "Last Will",
            "effect": [
                {
                    "description": "The culprit dies. At the start of the next loop, the Protagonists add \"Hope +1\" to hand."
                }
            ]
        },
        {
            "id": "singularity",
            "name": "The Singularity",
            "effect": [
                {
                    "type": "Mandatory Loss condition: Protagonists Death",
                    "prerequisite": "If the players are in the Light World and if this is the first time this game that this Incident triggered."
                },
                {
                    "prerequisite": "If the players are in the Light World",
                    "description": "Trigger a Warp."
                },
                {
                    "type": "Mandatory Loss condition: Protagonists Death",
                    "prerequisite": "If the players are in the Dark World and there is 1 or more :intrigue: counter on the culprit’s starting location"
                }
            ]
        },
        {
            "id": "seepingDaylight",
            "name": "Seeping Daylight",
            "effect": [
                {
                    "description": "The Leader chooses a character. Place 1 Hope counter on that character."
                }
            ]
        },
        {
            "id": "murkDespair",
            "name": "The Murk of Despair",
            "effect": [
                {
                    "description": "Place 1 Despair counter on any character."
                }
            ]
        }
    ]
}