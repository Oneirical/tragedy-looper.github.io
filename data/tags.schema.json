{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tags",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "showInGmScreen": {
            "type": "boolean"
          },
          "hideInPlayerScreen": {
            "type": "boolean"
          }
        },
        "required": [
          "name"
        ]
      }
    }
  }
}