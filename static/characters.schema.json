{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Characters",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "characters": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "paranoiaLimit": {
            "type": "number",
            "minimum": 0,
            "maximum": 4
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "boy",
                "girl",
                "student",
                "man",
                "woman",
                "adult",
                "construct",
                "animal",
                "tree",
                "little sister"
              ]
            }
          },
          "startLocation": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Hospital",
                "Shrine",
                "City",
                "School"
              ]
            }
          },
          "forbiddenLocation": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Hospital",
                "Shrine",
                "City",
                "School"
              ]
            }
          },
          "comesInLater": {
            "type": "boolean"
          },
          "plotLessRole": {
            "type": "string",
            "enum": [
              "all",
              "not in plots",
              "plot duplicate"
            ]
          },
          "scriptSpecified": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "location",
                    "incident",
                    "role",
                    "character",
                    "plot",
                    "number",
                    "text"
                  ]
                },
                "optional": {
                  "type": "boolean"
                }
              },
              "required": [
                "name",
                "type"
              ]
            }
          },
          "doseNotTriggerIncidentEffect": {
            "type": "boolean"
          },
          "abilities": {
            "type": "array",
            "items": {
              "type": "object",
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "passive"
                      ]
                    },
                    "description": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "description",
                    "type"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "active"
                      ]
                    },
                    "goodwillRank": {
                      "type": "number"
                    },
                    "immuneToGoodwillRefusel": {
                      "type": "boolean"
                    },
                    "restrictedToLocation": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "enum": [
                          "Hospital",
                          "Shrine",
                          "City",
                          "School"
                        ]
                      }
                    },
                    "description": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "description",
                    "type",
                    "goodwillRank"
                  ]
                }
              ]
            }
          }
        },
        "required": [
          "name"
        ]
      }
    }
  }
}